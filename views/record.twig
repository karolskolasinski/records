<!doctype html>
<html lang="en">
{% include "./fragments/head.html" %}
<body>

{% include "./fragments/nav.html" %}

<div class="container">
    <div class="section">
        <div class="row">
            <div class="container">
                <h1 class="header center teal-text text-lighten-2"><strong>Record details</strong></h1>
            </div>
            <div class="row">
                <div class="col s12 m6 offset-m3">
                    <div class="card">
                        <div class="card-image">
                            <img src="./public/img/background3.jpg" alt="record image">
                        </div>
                        <div class="card-content">
                            <div class="details-container">
                                <div>
                                    <h4>Record:</h4>
                                    <ul>
                                        <li><strong>ID:</strong> {{ record.id }}</li>
                                        <li><strong>Artist:</strong> {{ record.artist }}</li>
                                        <li><strong>Title:</strong> {{ record.title }}</li>
                                        <li><strong>Release Type:</strong> {{ record.release_type }}</li>
                                        <li><strong>Release Year:</strong> {{ record.release_year }}</li>
                                    </ul>
                                </div>
                                <div>
                                    <h4>Tracks:</h4>
                                    <ul>
                                        {% for track in details %}
                                            <li><strong>ID:</strong> {{ track.id }}</li>
                                            <li><strong>Title:</strong> {{ track.title }}</li>
                                            <li><strong>Artist:</strong> {{ track.artist }}</li>
                                            <br>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <a class="waves-effect waves-light btn" href="javascript:history.back()">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% include "./fragments/footer.html" %}
{% include "./fragments/scripts.html" %}

</body>
</html>

