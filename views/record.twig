<!doctype html>
<html lang="en">
{% include "./fragments/head.html" %}
<body>

{% include "./fragments/nav.html" %}

<div class="container">
    <div class="section">
        <div class="row">
            <div class="container">
                <h1 class="header center teal-text text-lighten-2"><strong>Record details</strong></h1>
            </div>
            <div class="row">
                <div class="col s12 m6 offset-m3">
                    <div class="card">
                        <div class="card-image">
                            <img src="./public/img/background3.jpg" alt="record image">
                        </div>
                        <div class="card-content">
                            <div class="details-container">
                                <div>
                                    <h4>Record:</h4>
                                    <ul class="collection">
                                        <li class="collection-item">
                                            <strong>ID:</strong> {{ record.id }}
                                        </li>

                                        <li class="collection-item">
                                            <strong>Artist:</strong> {{ record.artist }}
                                        </li>

                                        <li class="collection-item">
                                            <strong>Title:</strong> {{ record.title }}
                                        </li>

                                        <li class="collection-item">
                                            <strong>Release Type:</strong> {{ record.release_type }}
                                        </li>

                                        <li class="collection-item">
                                            <strong>Release Year:</strong> {{ record.release_year }}
                                        </li>
                                    </ul>
                                </div>
                                <div>
                                    <h4>Tracks:</h4>
                                    {% if details.message is not empty %}
                                        <p class="center">{{ details.message }}</p>
                                        <p class="center">Click the button below to add a new track:</p>
                                        <div class="center cp-2">
                                            <a class="btn-floating btn-large waves-effect waves-light red pulse"
                                               href="./?p=add-track&record-id={{ record.id }}">
                                                <i class="material-icons">add</i>
                                            </a>
                                        </div>
                                    {% else %}
                                        {% for track in details %}
                                            <ul class="collection">
                                                <li class="collection-item">
                                                    <strong>ID:</strong> {{ track.id }}
                                                </li>

                                                <li class="collection-item">
                                                    <strong>Title:</strong> {{ track.title }}
                                                </li>

                                                <li class="collection-item">
                                                    <strong>Artist:</strong> {{ track.artist }}
                                                </li>

                                                <li class="collection-item">
                                                    <div class="center">
                                                        <a class="waves-effect btn btn-flat teal lighten-3 white-text bmtb-_5"
                                                           href="./?p=update-track&track-id={{ track.id }}&record-id={{ record.id }}">Edit
                                                        </a>

                                                        <a class="waves-effect btn btn-flat red lighten-3 white-text bmtb-_5"
                                                           href="./?p=delete-track&track-id={{ track.id }}">Delete
                                                        </a>
                                                    </div>
                                                </li>
                                            </ul>
                                        {% endfor %}
                                        <div class="center cp-2">
                                            <div class="card-action">
                                                <div class="center">
                                                    <a class="waves-effect btn bmtb-_5"
                                                       href="./?p=add-track&record-id={{ record.id }}">Add a new track
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <a class="waves-effect waves-light btn bmtb-_5" href="javascript:history.back()">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% include "./fragments/footer.html" %}
{% include "./fragments/scripts.html" %}

</body>
</html>

